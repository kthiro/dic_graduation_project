<ul>
  <% flash.each do |key, value| %>
    <li><%= value %></li>
  <% end %>
</ul>

<%= form_with(model: @team, url: choose_new_or_edit, local: true) do |f| %>

  <% if @team.errors.any? %>
    <p><%= @team.errors.count %>件のエラーがあります。</p>
    <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <br>
  
  <%= f.label :name, 'チーム名' %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :sport_event, 'チームが行っているスポーツの種目' %>
  <%= f.text_field :sport_event %>
  <br>
  <%= f.label :area, '活動地域のキーワード' %>
  <%= f.text_field :area %>
  <br>
  <%= f.label :number_of_member, 'チームに所属しているメンバーの数' %>
  <%= f.number_field :number_of_member %>名
  <br>
  <%= f.label :profile_image, 'プロフィール画像' %>
  <% if @team.profile_image.url %>
    <%= image_tag(@team.profile_image.url) %>
    <%= f.hidden_field :profile_image_cache %>
    <p>別の画像を登録する場合は選択してください。</p>
  <% end %>
  <%= f.file_field :profile_image %>
  <br>
  <%= f.label :introduction, 'チーム紹介' %>
  <%= f.text_area :introduction %>
  <br><br>
  <%= f.submit '登録する' %>
  
<% end %>