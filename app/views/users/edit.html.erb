<h1>Users#edit</h1>

<%= form_with(model: @user, local: true) do |f| %>

   <% if flash %>
    <% flash.each do |key, value| %>
      <p><%= key %>:<%= value %></p>
    <% end %>
  <% end %>

  <% if @user.errors.any? %>
    <p><%= @user.errors.count %>件のエラーがあります。</p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= f.label 'ユーザーネーム' %>
  <%= f.text_field :name %>
  
  <%= f.label 'メールアドレス' %>
  <%= f.text_field :email %>
  
  <%= f.label 'パスワード' %>
  <%= f.text_field :password %>

  <%= f.label 'パスワードの確認' %>
  <%= f.text_field :password_confirmation %>

  <%= f.label 'プロフィール画像' %>
  <% if @user.profile_image.url %>
    <%= image_tag(@user.profile_image.url) %>
    <%= f.hidden_field :profile_image_cache %>
    <p>別の画像を登録する場合は選択してください。</p>
  <% end %>
  <%= f.file_field :profile_image %>
  
  <%= f.label 'スポーツ種目' %>
  <%= f.text_field :sport_event %>
  
  <%= f.label '種目の経験年数' %>
  <%= f.select :sport_event_career, User.sport_event_careers.keys %>
  
  <%= f.label '活動希望地域' %>
  <%= f.text_field :area %>
  
  <%= f.label '性別' %>
  <%= f.select :sex, User.sexes.keys %>
  
  <%= f.label '自己紹介' %>
  <%= f.text_field :introduction %>
  
  <%= f.submit '編集完了' %>

<% end %>