<h1>Users#show</h1>

<ul>
  <% flash.each do |key, value| %>
    <li><%= value %></li>
  <% end %>
</ul>
  

<div>
  <% if @user.profile_image.url %>
   <%= image_tag(@user.profile_image.url) %>
  <% end %>
  <br>
  <%= @user.name %>
  <br>
  <%= @user.email %>
  <br>
  <%= @user.sport_event %>(<%= @user.sport_event_career %>)
  <br>
  <%= @user.area %>
  <br>
  <%= @user.sex %>
</div>

<div>
  <%= @user.introduction %>
</div>

<p><%= link_to 'ユーザー情報編集', edit_user_path(@user.id) %></p>
